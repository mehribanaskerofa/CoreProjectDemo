@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count() == 0)
    {
        <div class="media text-muted">
            <h5>There are no comments for this blog yet. Be the first to comment!</h5>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                @*<img src="~/web/images/t1.jpg" alt="" class="img-fluid" />*@
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
            <br />
        }
    }
</div>