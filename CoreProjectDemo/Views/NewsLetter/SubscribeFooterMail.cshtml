<div class="tech-btm">
    <p>Technology, Software and other blogs...</p>
    <form id="subForm" method="post">
        <input type="email" placeholder="Enter Your Email Address!" name="Mail" required="">
        <input type="submit" id="btn" name="submit" value="Subscribe">
        <br />
        <div id="result"></div><br />
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $("#btn").click(function (e) {
            var result = document.createElement("div");
            result.className = "alert alert-success";
            result.innerHTML = "Registration Successfull";
            document.body.appendChild(result);
            e.preventDefault();
            var data = $("#subForm").serialize();
            $.ajax({
                type: "post",
                url: "/NewsLetter/SubscribeFooterMail/",
                data: data,
                success: function (f) {
                    $("#result").html(result);
                    setTimeout(() => { window.location.reload() }, 7500);
                }
            });
        });
    });
</script>

<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>