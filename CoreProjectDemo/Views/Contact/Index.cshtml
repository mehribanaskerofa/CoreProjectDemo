@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<link href="~/web/css/contact.css" rel='stylesheet' type='text/css' />

<!DOCTYPE html>
<html lang="">

<body>
    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">Contact us!</h3>
        <p class="sub text-center">YOUR THOUGHTS ARE VERY VALUABLE TO US.</p>
        <div class="contact-map inner-sec">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194473.18588939894!2d49.8549596!3d40.394592499999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2z0JHQsNC60YM!5e0!3m2!1sru!2saz!4v1683716973186!5m2!1sru!2saz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            
        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row">
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Address</h6>
                                <p>
                                    Baku, Azerbaijan.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Email:</h6>
                                <p>
                                    <a href="mailto:mehribanaskerofa@gmail.com">mehribanaskerofa@gmail.com</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Phone</h6>
                                <p>+994(50) 737-00-??</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="contact_grid_right">
                <form asp-action="Index" asp-controller="Contact" method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label for="validationCustom01 my-2">Fullname</label>
                                <input class="form-control" type="text" name="ContactUserName" placeholder="Enter your Name and Surname!" required="">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">EMAIL</label>
                                <input class="form-control" type="email" name="ContactMail" placeholder="Enter Your Email Address!" required="">
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03 my-2">Subject</label>
                                <input class="form-control" type="text" name="ContactSubject" placeholder="Enter Your Subject!" required="">
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label for="textarea">Message</label>
                                <textarea id="textarea" name="ContactMessage" placeholder="Enter Your Message!"></textarea>
                            </div>
                            <input class="form-control" type="submit" value="Send">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
</html>